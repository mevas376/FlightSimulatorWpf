<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:views="clr-namespace:FlightSimulatorApp.Views"
        Title="MainWindow" Height="1250" Width="1250"
        Background="White"
        >
    <Grid>
        <Grid.RowDefinitions> <!--Definning the size of the grid-->
            <RowDefinition Height="0.35*"/>
            <RowDefinition Height="0.65*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.65*"/>
            <ColumnDefinition Width="0.35*"/>
        </Grid.ColumnDefinitions>

        <views:Dashboard Grid.Row="0" Grid.Column="0">
        </views:Dashboard>

        <views:Steers Grid.Row="1" Grid.Column="1">
        </views:Steers>

        <views:Map Grid.Column="0" Grid.Row="1" x:Name="VM_Map" Loaded="Map_Loaded">
        </views:Map>

        <views:Features Grid.Column="1" Grid.Row="0">
        </views:Features>
    </Grid>
</Window>
