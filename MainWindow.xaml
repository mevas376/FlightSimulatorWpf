<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:views="clr-namespace:FlightSimulatorApp.Views"
        Title="MainWindow" Height="1000" Width="1400"
        Background="White"
        >
    <Grid>
        <Grid.RowDefinitions> <!--Definning the size of the grid-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <views:Dashboard Grid.Row="0" Grid.Column="1" Margin="0.333,10,-35.667,10.333">
        </views:Dashboard>

        <views:Steers Grid.Row="1" Grid.Column="1" Height="500" Width="600">
        </views:Steers>

        <views:Map Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" >
        </views:Map>

        <views:Features Grid.Column="0" Grid.Row="0">
        </views:Features>
    </Grid>
</Window>
